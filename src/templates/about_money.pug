			{ name: "365 Plus 2",	price: "69 900", description: "365 дней + Crossfit и Studio" },
			{	name: "365 Plus 1", price: "59 900", description: "365 дней + Crossfit или Studio на выбор"	},
			{	name: "365", price: "48 000", description: "365 дней"	},
			{	name: "0:2", price: "24 000",	description: "Только выходные дни" },
			{	name: "5:0", price: "43 200",	description: "Только рабочие дни"	},
			{	name: "5:0 / 7-17", price: "33 600", description: "По рабочим до 17:00"	},
			{	name: "5:0 / 10-17", price: "28 800", description: "По рабочим с 10:00 до 17:00" },
			{	name: "2+2", price: "38 600", description: "Вт,Чт, и выходные" },
			{	name: "Crossfit365", price: "36 000", description: "365 дней только Crossfit" },
			{	name: "365 Kids",	price: "12 000", description: "Плавание с родителями" },
			{	name: "365 Kids Plus", price: "38 000",	description: "Плавание с родителями, детские классы" },
		];

		var tariffsShortArr = [
			{ description: "Персоналка для взрослых <br class=\"hidden-smPlus\">и детей 50 мин", price: "2 500"	},
			{	description: "В блоке из 8", price: "2 000" },
			{	description: "Персоналка в бассейне <br class=\"hidden-smPlus\">для детей 30 мин", price: "1 500" },
			{	description: "В блоке из 8", price: "1 100" }
		];

		var tariffsShortArr2 = [
			{	description: "1 занятие",	price: "700" },
			{	description: "3 занятия",	price: "1 950" },
			{	description: "8 занятий",	price: "4 800" },
