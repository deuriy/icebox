.MenuHamburger
	position: relative
	width: 20px
	height: 16px
	transform-rotate(0)
	transition .5s ease-in-out
	cursor: pointer
	
	&_line
		position: absolute
		left: 0
		display: block
		width: 100%
		height: 2px
		background: $white
		opacity: 1
		transform-rotate(0)
		transition .25s ease-in-out
		
		&:nth-child(1)
			top: 0px
			transform-origin left center
		
		&:nth-child(2)
			top: 7px
			transform-origin left center
		
		&:nth-child(3)
			top: 14px
			transform-origin left center
	
	&-open
		.MenuHamburger_line
			&:nth-child(1)
				top 0
				left 2px
				transform-rotate(45)
				
			&:nth-child(2)
				width 0%
				opacity 0
				
			&:nth-child(3)
				top 14px
				left 2px
				transform-rotate(-45)