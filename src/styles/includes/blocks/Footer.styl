.Footer
	flex 0 0 auto
	padding-bottom 75px
	text-align center
	
	@media $smPlus
		padding-bottom 45px
	
	@media $mdPlus
		padding-bottom 27px
	
	&_container
		display flex
		
		@media $smMinus
			flex-direction column
			align-items center
		
		@media $mdPlus
			justify-content space-between
			align-items flex-end
	
	&_column
		&-first
			@media $smMinus
				display flex
				flex-direction column
				align-items center
		&-second
			@media $mdPlus
				order 3
	
	&_phone
		margin-bottom 24px
		font-weight bold
		font-size 20px
		color $white2
		
		@media $mdPlus
			margin-bottom 16px
		
		&-mobile
			@media $smPlus
				display none
	
	&_socIcons
		margin-bottom 24px
		color $white2
		
		@media $mdPlus
			margin-bottom 23px
	
	&_email
		display inline-block
		color $white2
		text-decoration underline
		
		@media $smMinus
			margin-bottom 27px
		
		@media $mdPlus
			margin-bottom 3px
			margin-left -3px
		
		&:hover, &:focus
			text-decoration none
	
	&_socNetworks
		margin-bottom 26px
		
		@media $mdPlus
			margin-bottom 28px
			margin-left 12px
	
	&_copyright
		color $white2
		font-size 14px
		
		@media $smMinus
			margin-bottom 29px
	
	&_companyLogo
		transition .25s ease-in-out
		
		@media $mdPlus
			margin-left -14px
		
		&:hover, &:focus
			color #477795