.SvgIco
	display inline-block
	vertical-align middle
	
	&_path, &_line, &_g
		fill currentColor
	
	&-infoBlock
		.SvgIco_path, .SvgIco_g
			fill transparent
			stroke currentColor
			transition .25s ease-in-out
		
		.SvgIco_path
			stroke-width 2
		
		&:hover
			.SvgIco_path
				fill currentColor
		
			.SvgIco_g
				stroke $white
	
	&-thick
		.SvgIco_path
			stroke-width 3
	
	&-personalTraining
		.SvgIco_g
			fill currentColor
			stroke-width 0
			
		&:hover
			.SvgIco_g
				fill $white
	
	&-bathroom
		.SvgIco_g
			fill currentColor
			stroke transparent
		
		&:hover
			.SvgIco_g
				fill $white
				stroke transparent
	
	&-children
		.SvgIco_g
			fill currentColor
		
		&:hover
			.SvgIco_g
				fill $white