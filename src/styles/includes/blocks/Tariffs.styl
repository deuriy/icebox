.Tariffs
	&_title, &_note
		font-weight 500
		font-size 15px
		line-height normal
		color $white
		
	&_title
		margin-bottom 23px
		text-transform uppercase
		
		@media $smPlus
			margin-bottom 18px
			font-size 16px
			line-height 1.6
	
	&_note
		margin-top 16px
		
		@media $smPlus
			margin-top 24px
			font-size 16px
		
		@media $mdPlus
			margin-left -2px
	
	&_link
		font-size 15px
		
		@media $smPlus
			font-size 16px
	
	&-groupLessons
		.Tariffs_title
			margin-bottom 10px
			
			@media $smPlus
				margin-bottom 24px