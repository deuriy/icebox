.Form
	max-width 280px
	
	@media $mdPlus
		max-width none
	
	&_title
		margin-bottom 21px
		
		@media $smPlus
			margin-bottom 40px
			text-align center
		
		@media $mdPlus
			margin-bottom 43px
			padding-right 12px
	
	&_description
		margin-bottom 27px
		line-height normal
		
		@media $smPlus
			margin-bottom 58px
			text-align center
		
		@media $mdPlus
			position relative
			right 8px
			max-width 560px
			margin-right auto
			margin-bottom 44px
			margin-left auto
	
	&_wrapper
		@media $mdPlus
			display flex
			justify-content center
			align-items flex-end
	
	&_items
		@media $mdPlus
			display flex
	
	&_item
		@media $smMinus
			margin-bottom 27px
		
		@media $mdPlus
			display flex
			flex-direction column
			margin-right 40px
	
	&_textField
		width 100%
		
		@media $mdPlus
			width 230px
	
	&_hint-error
		display block
		margin-top 4px
		font-size 10px
		color #C7C7C7
	
	&_actions
		@media $mdMinus
			margin-top 31px
		
		@media $mdPlus
			margin-bottom -2px
	
	&_submit
		width 100%
	
	&-center
		margin-right auto
		margin-left auto
	
	&-trialLesson
		@media $sm
			max-width 375px
			
		.Form_title
			margin-bottom 10px
			
			@media $smPlus
				margin-bottom 16px
				padding-right 5px
			
			@media $mdPlus
				margin-bottom 13px
				padding-right 20px
		
		.Form_wrapper
			@media $sm
				position relative
				right 6px
				max-width 280px
				margin-right auto
				margin-left auto
			
			@media $mdPlus
				padding-left 5px
		
		.Form_submit
			@media $mdPlus
				padding-right 23px
				padding-left 23px